<view class="category-wrapper"><scroll-view class="category-scroll" scroll-y="{{true}}"><block tt:for="{{categories}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['selectCategory',[index]]]]]}}" class="{{(('category-item')+' '+((selectedCategoryIndex===index)?'active':''))}}" bindtap="__e"><view class="solid"></view>{{''+item.title+''}}</view></block></scroll-view><scroll-view class="sub-category-scroll"><view class="scroll_t"><block tt:for="{{subCategories}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view data-event-opts="{{[['tap',[['selectSubCategory',[index]]]]]}}" class="sub-category-item" bindtap="__e"><image src="{{item.image}}" alt class="_img"></image><view class="img_item">{{''+item.title+''}}</view></view></block></view></scroll-view></view>