
.category-wrapper {
	display: flex;
	/* flex-direction: column; */
	width: 100%;
	height: 100%;
}
.category-scroll {
	width: 231rpx;
	height: 74vh;
}
.category-item {
	display: inline-block;
	padding: 15rpx;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 231rpx;
	height: 88rpx;
	background: #F2F4FF;
	box-sizing: border-box;
}
.sub-category-scroll {
	flex: 1;
	overflow-y: scroll;
	height: 74vh;
	background-color: #fff;
}
.scroll_t {
	display: flex;
	padding: 19rpx;
	justify-content: space-between;
	flex-wrap: wrap;
}
.sub-category-item {
	padding: 20rpx;
	box-sizing: border-box;
	width: 230rpx;
	margin-bottom: 20rpx;
	box-sizing: border-box;
}
.sub-category-item ._img {
	width: 230rpx;
	height: 230rpx;
	border-radius: 8px;
}
.active .solid {
	width: 8rpx;
	height: 62rpx;
	background: #FF7006;
	position: absolute;
	left: 10rpx;
}
.img_item {
	text-align: center;
	padding: 11rpx 0;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.active {
	color: red;
	width: 231rpx;
	height: 126rpx;
	background: #FFFFFF;
	font-weight: bold;
	border-left: 1px solid #000;
	position: relative;
}

